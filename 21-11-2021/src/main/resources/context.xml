<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="optionDao" class="otus.tilegen.test.dao.OptionDaoImpl">
        <constructor-arg value="options.csv"/>
    </bean>
    <bean id="questionDao" class="otus.tilegen.test.dao.QuestionDaoImpl">
        <constructor-arg name="questionFileName" value="questions.csv"/>
        <constructor-arg name="optionDao" ref="optionDao"/>
    </bean>
    <bean id="testService" class="otus.tilegen.test.service.TestServiceImpl">
        <constructor-arg name="questionDao" ref="questionDao"/>
    </bean>
</beans>